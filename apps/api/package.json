{
  "name": "@scalemap/api",
  "version": "1.0.0",
  "private": true,
  "description": "ScaleMap API - AWS Lambda Backend Services",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "deploy:staging": "cdk deploy --profile staging",
    "deploy:production": "cdk deploy --profile production",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist cdk.out"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.449.0",
    "@aws-sdk/client-s3": "^3.449.0",
    "@aws-sdk/client-ses": "^3.888.0",
    "@aws-sdk/client-sqs": "^3.449.0",
    "@aws-sdk/lib-dynamodb": "^3.449.0",
    "@scalemap/shared": "*",
    "aws-lambda": "^1.0.7",
    "bcryptjs": "^2.4.3",
    "openai": "^4.17.4",
    "stripe": "^14.5.0"
  },
  "devDependencies": {
    "@scalemap/eslint-config": "*",
    "@scalemap/typescript-config": "*",
    "@types/aws-lambda": "^8.10.152",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.8.9",
    "aws-cdk-lib": "^2.104.0",
    "constructs": "^10.3.0",
    "esbuild": "^0.25.10",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
