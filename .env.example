# Environment Configuration
NODE_ENV=development

# AWS Configuration
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# Database Configuration (Production)
DYNAMODB_TABLE_NAME=scalemap-prod
DYNAMODB_ENDPOINT=  # Leave empty for production AWS DynamoDB

# S3 Configuration
S3_BUCKET_NAME=scalemap-documents-prod-mvpdev
S3_REGION=eu-west-1

# SES Configuration
SES_REGION=eu-west-1
SES_FROM_EMAIL=john@scalemap.uk

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION_ID=your_openai_org_id_here
OPENAI_MODEL_PRIMARY=gpt-4o
OPENAI_MODEL_COST_OPTIMIZED=gpt-4o-mini
OPENAI_MODEL_ADVANCED=o1-preview
OPENAI_MAX_COST_PER_ASSESSMENT=2.00
OPENAI_CIRCUIT_BREAKER_THRESHOLD=5

# Stripe Configuration (Test Keys)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Next.js Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Redis Configuration (Development)
REDIS_URL=redis://localhost:6379

# LocalStack Configuration
LOCALSTACK_ENDPOINT=http://localhost:4566

# Email Configuration
EMAIL_FROM=john@scalemap.uk
EMAIL_PROVIDER=ses

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ID=your_analytics_id_here

# Feature Flags
FEATURE_AI_AGENTS=true
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_BETA_FEATURES=false

# Security Configuration
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000